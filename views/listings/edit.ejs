<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h1>Edit Your LIST!</h1>
    <form action="/listings/<%=listInfo._id%>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" value="<%=listInfo.title%>" name="listing[title]" class="form-control" required>
            <div class="invalid-feedback">Provide a Title</div>
        </div>
        <div class="mb-3">
             <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]"   cols="30" rows="6" class="form-control" required><%=listInfo.description%></textarea>
            <div class="invalid-feedback">Provide a Short Description</div>
        </div>
        <div class="mb-3">
            Original Image<br>
            <img src="<%=originalImageUrl%>" alt="" class="img-fluid w-25 h_15 rounded">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload new Image</label>
            <input type="file" value="<%=listInfo.image.url%>" class="form-control" name="listing[image]">
        </div>
         <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input  value="<%=listInfo.price%>"class="form-control"  name="listing[price]" required>
                <div class="invalid-feedback">Provide valid price</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" value="<%=listInfo.country%>" class="form-control"  name="listing[country]" required>
                <div class="invalid-feedback">Provide The COUNTRY name</div>
            </div>
         </div>
         <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" value="<%=listInfo.location %>"class="form-control"  name="listing[location]" required>
            <div class="invalid-feedback">Provide a location</div>
         </div>
        <br><br>
        <button class="edit-btn btn-dark  mt-3">Edit Data!</button>
        <br><br>
    </form>
    </div>
    </div>
</body>