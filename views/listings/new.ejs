<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
        <br><br>
        <h1> Create New List!!</h1>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" placeholder="Enter catchy Title" name="listing[title]" class="form-control" required>
            <div class="valid-feedback">Title Looks good!</div>
            <div class="invalid-feedback">Provide a Title</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]"cols="30" rows="6" class="form-control" required></textarea >
            <div class="valid-feedback">Naiss Description</div>
            <div class="invalid-feedback">Provide Short Description</div>

        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="file"  name="listing[image]" class="form-control" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input  placeholder="1500" name="listing[price]" class="form-control" required>
            <div class="invalid-feedback">Provide a Valid Price</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" placeholder="India" name="listing[country]" class="form-control" required>
            <div class="invalid-feedback">Provide the country Name</div>
        </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" placeholder="Jaipur-Rajasthan" name="listing[location]" class="form-control" required>
            <div class="invalid-feedback">Provide a location</div>
        </div>
        <br><br>
        <button class="add-btn btn-dark ">Add</button>
        <br><br>
    </form>
    </div>
    </div>
</body>